{
  "name": "quran",
  "version": "1.0.0",
  "private": false,
  "repository": "https://github.com/quran/quran.com-frontend",
  "scripts": {
    "test": "npm run lint; npm run jest",
    "lint": "./node_modules/eslint/bin/eslint.js ./src",
    "jest": "jest",
    "test:stylelint": "stylelint './src/**/*.scss' --config ./webpack/.stylelintrc",
    "dev": "cross-env NODE_PATH='./src' PORT=8000 UV_THREADPOOL_SIZE=100 node --expose-gc ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./webpack/dev.web.config.js --progress  & env NODE_PATH='./src' PORT=8000 node --expose-gc ./bin/server.js",
    "build": "npm run build:client & npm run build:server",
    "build:server": "babel ./src -d ./dist -D",
    "build:client": "webpack --config ./webpack/prod.web.config.js",
    "validate": "npm ls",
    "analyze:build": "cross-env NODE_ENV=production webpack --json --config ./webpack/prod.web.config.js  > bundle-stats.json",
    "analyze:json": "webpack-bundle-analyzer bundle-stats.json",
    "analyze": "npm run analyze:build; npm run analyze:json",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --single-quote --write",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  },
  "pre-commit": [
    "test:stylelint",
    "precommit"
  ],
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run lint:fix",
      "git add"
    ],
    "*.scss": [
      "npm run prettier",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 8.9.1"
  },
